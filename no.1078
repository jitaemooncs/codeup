#include <stdio.h>

int main(void)
{
    int number, sum = 0;
    
    scanf("%d", &number);
    
    for (int i = 1; i <= number; i++)
    {
        if (i % 2 == 0)
        {
            sum += i;
        }
        else
        {
            continue;
        }
    }
    
    printf("%d\n", sum);
}
